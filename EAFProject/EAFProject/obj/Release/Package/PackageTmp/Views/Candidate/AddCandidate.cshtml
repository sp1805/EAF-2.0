@model EAFProject.Models.CandidateClass

@{
    ViewBag.Title = "AddCandidate";
}
<div class="w3-modal-content w3-card-8 w3-animate-zoom" style="max-width: 800px">
    <span onclick="document.getElementById('id02').style.display='none'" class="w3-closebtn w3-hover-red w3-container w3-padding-8 w3-display-topright " title="Close Modal">&times;</span>
    <div class="w3-center">
        <br>
    </div>
    <center><h2>Add Candidate</h2></center>
    <form class="w3-container" method="post" enctype="multipart/form-data">
        <div class="w3-section w3-margin">
            <div class="w3-group">
                @Html.TextBoxFor(model => model.name, new { @class = "w3-input required",maxlength = "50" })
                <label class="w3-label ">Candidate Name</label>
                <span style="color:red">*<br />@Html.ValidationMessageFor(model => model.name)</span>
            </div>

            <div class="w3-group">
                @Html.TextBoxFor(model => model.phoneNumber, new { @class = "w3-input required",maxlength = "10" })
                <label class="w3-label ">Phone Number</label>
                <span style="color:red">*<br />@Html.ValidationMessageFor(model => model.phoneNumber)</span>
            </div>

            <div class="w3-group">
                @Html.TextBoxFor(model => model.email, new { @class = "w3-input required email" })
                <label class="w3-label ">Email</label>
                <span style="color:red">*<br />@Html.ValidationMessageFor(model => model.email)</span>
            </div>

            <div class="w3-group">
                <input class="w3-input" type="file" id ="file" name="file_Uploader">
                <label class="w3-label w3-validate">Upload Resume</label><span style="color:red">*</span>
            </div>

            @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control slider_example_4 w3-input required" })
            <label class="w3-label w3-validate">Schedule Interview</label>
            <span style="color:red">*</span>
            <input id="sbmt" type="submit" class="w3-btn-block w3-teal" name="action:AddCandidate" value="Submit" />

        </div>
    </form>

</div>
<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<link href="~/Styles/JQueryUi.css" rel="stylesheet" />
